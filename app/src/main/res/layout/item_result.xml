<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_2sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/question_counting"
                    android:layout_width="@dimen/_26sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_weight="0.2"
                    android:background="@drawable/greencircle"
                    android:fontFamily="@font/aileron_regular"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/TvQuestion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_weight="1.8"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/ImgQuestion"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_weight="1.8"
                    android:src="@drawable/hoursimg"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:orientation="vertical">

                <RadioGroup
                    android:id="@+id/radio_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <RadioButton
                            android:id="@+id/radio_one"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_margin="@dimen/_3sdp"
                            android:layout_weight="0"
                            android:checked="false" />

                        <TextView
                            android:id="@+id/TvOptionA"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_weight="2"
                            android:fontFamily="@font/aileron_regular"
                            android:text="2"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_11sdp" />

                        <ImageView
                            android:id="@+id/ImgOptionA"
                            android:layout_width="@dimen/_300sdp"
                            android:layout_height="150dp"
                            android:layout_weight="2"
                            android:src="@drawable/hoursimg"
                            android:visibility="gone" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <RadioButton
                            android:id="@+id/radio_two"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_margin="@dimen/_3sdp"
                            android:layout_weight="0"
                            android:checked="false" />

                        <TextView
                            android:id="@+id/TvOptionB"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_weight="2"
                            android:fontFamily="@font/aileron_regular"
                            android:text="12"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_11sdp" />

                        <ImageView
                            android:id="@+id/ImgOptionB"
                            android:layout_width="@dimen/_300sdp"
                            android:layout_height="150dp"
                            android:layout_weight="2"
                            android:src="@drawable/hoursimg"
                            android:visibility="gone" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <RadioButton
                            android:id="@+id/radio_three"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_margin="@dimen/_3sdp"
                            android:layout_weight="0"
                            android:checked="false" />

                        <TextView
                            android:id="@+id/TvOptionC"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_weight="2"
                            android:fontFamily="@font/aileron_regular"
                            android:text="24"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_11sdp" />

                        <ImageView
                            android:id="@+id/ImgOptionC"
                            android:layout_width="@dimen/_300sdp"
                            android:layout_height="150dp"
                            android:layout_weight="2"
                            android:src="@drawable/hoursimg"
                            android:visibility="gone" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <RadioButton
                            android:id="@+id/radio_four"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_margin="@dimen/_3sdp"
                            android:layout_weight="0"
                            android:checked="false" />

                        <TextView
                            android:id="@+id/TvOptionD"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_weight="2"
                            android:fontFamily="@font/aileron_regular"
                            android:text="2"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_11sdp" />

                        <ImageView
                            android:id="@+id/ImgOptionD"
                            android:layout_width="@dimen/_300sdp"
                            android:layout_height="150dp"
                            android:layout_weight="2"
                            android:src="@drawable/hoursimg"
                            android:visibility="gone" />
                    </LinearLayout>
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:layout_margin="@dimen/_5sdp"
                android:background="@color/gray"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:fontFamily="@font/aileron_regular"
                    android:text="Explanation"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp" />

                <TextView
                    android:id="@+id/explntn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:fontFamily="@font/aileron_regular"
                    android:text="Explanation"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="@color/gray" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
