<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    tools:context=".nav_item.HomeFragment">
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <LinearLayout
           android:id="@+id/linear_layout1"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:visibility="gone"
           android:weightSum="2">
           <TextView
               android:id="@+id/txt_latest"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Latest Videos"
               android:layout_marginStart="@dimen/_10sdp"
               android:layout_marginBottom="@dimen/_10sdp"
               android:layout_marginTop="@dimen/_10sdp"
               android:textSize="@dimen/_15sdp"
               android:layout_weight="1.5"
               android:fontFamily="@font/aileron_regular"
               android:textColor="@color/black"/>
           <ImageView
               android:id="@+id/img_arrow"
               android:layout_width="@dimen/_25sdp"
               android:layout_height="@dimen/_25sdp"
               android:layout_weight="0.5"
               android:layout_gravity="center"
               android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
               />
       </LinearLayout>
       <androidx.recyclerview.widget.RecyclerView
           android:id="@+id/vdeo_recyclerview"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="@dimen/_10sdp"
           android:layout_below="@id/linear_layout1"
           android:layout_marginStart="@dimen/_5sdp"
           android:scrollbars="vertical"/>
       <TextView
           android:id="@+id/txt_mycourse"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="My Courses"
           android:layout_marginStart="@dimen/_10sdp"
           android:layout_marginBottom="@dimen/_10sdp"
           android:layout_marginTop="@dimen/_10sdp"
           android:textSize="@dimen/_15sdp"
           android:visibility="gone"
           android:layout_below="@id/vdeo_recyclerview"
           android:fontFamily="@font/aileron_regular"
           android:textColor="@color/black"/>
       <androidx.recyclerview.widget.RecyclerView
           android:id="@+id/recycler_grid_view_mycourse"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@id/txt_mycourse"
           android:layout_marginTop="@dimen/_10sdp"
           android:visibility="gone"
           android:layout_marginBottom="@dimen/_5sdp"/>
       <TextView
           android:id="@+id/txt_course"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="All Courses"
           android:layout_marginStart="@dimen/_10sdp"
           android:layout_marginBottom="@dimen/_10sdp"
           android:layout_marginTop="@dimen/_10sdp"
           android:textSize="@dimen/_15sdp"
           android:layout_below="@id/recycler_grid_view_mycourse"
           android:fontFamily="@font/aileron_regular"
           android:textColor="@color/black"/>

       <androidx.recyclerview.widget.RecyclerView
           android:id="@+id/recycler_grid_view_course"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@id/txt_course"
           android:layout_marginTop="@dimen/_10sdp"
           android:layout_marginBottom="@dimen/_5sdp"/>
       <ImageView
           android:id="@+id/img2"
           android:layout_width="match_parent"
           android:layout_height="@dimen/_130sdp"
           android:scaleType="fitXY"
           android:layout_marginTop="@dimen/_12sdp"
           android:layout_marginBottom="@dimen/_5sdp"
           android:layout_below="@id/recycler_grid_view_course"
          />
       <androidx.cardview.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="@dimen/_80sdp"
           android:layout_margin="@dimen/_5sdp"
           android:layout_marginBottom="@dimen/_10sdp"
           android:background="#fff"
           android:layout_below="@id/img2"
           app:cardCornerRadius="@dimen/_3sdp">

          <LinearLayout
              android:layout_width="match_parent"
                  android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:layout_gravity="center"
              android:weightSum="2">
             <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_weight="0.8"
                 android:gravity="center"
                 android:background="@drawable/bg">
                 <pl.droidsonroids.gif.GifImageView
                     android:id="@+id/imageView_call"
                     android:layout_width="@dimen/_70sdp"
                     android:layout_height="@dimen/_70sdp"
                     android:layout_gravity="center_vertical"
                     android:src="@drawable/urcall" />
             </LinearLayout>
              <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_gravity="center"
                  android:layout_weight="1.2">
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Expert Help Available"
                      android:textAlignment="center"
                      android:textColor="@color/black"
                      android:fontFamily="@font/aileron_regular"
                      android:textSize="@dimen/_15sdp"/>
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="For any doubts please call any time"
                      android:textAlignment="center"
                      android:textColor="@color/darkgray"
                      android:layout_marginTop="@dimen/_10sdp"
                      android:fontFamily="@font/aileron_light"
                      android:textSize="@dimen/_12sdp"/>

              </LinearLayout>
          </LinearLayout>
       </androidx.cardview.widget.CardView>
   </RelativeLayout>

</ScrollView>